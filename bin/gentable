#!/bin/bash
cat /usr/local/share/midirecorder/htmlhead.html
echo "<table>"
listfiles $1 | while read r
do
       infofile=${r%.mid}.info	
       fn=$(jq -r .fullname "$infofile")
       line=$(jq -r '. | "<tr><td>\(.name)</td><td>\(.duration)</td>"' "$infofile")
       line=$line"<td><button type=\"button\" onclick=\"play('$fn')\">Play</button></td></tr>"
       echo "$line"
done
echo "</table>"
